{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [{
    "description": "Cert Manager Production",
    "matchPaths": ["apps/cert-manager/config_dir.json"],
    "enabled": true,
    "automerge": false,
    "commitMessage": "chore(cert-manager): Cert Manager Production {{currentValue}} update to {{newValue}}" 
  }],
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "certManager": {
    "fileMatch": ["apps/cert-manager/production/.+\\.js?on$"]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "\\.json$"
      ],
      "matchStrings": ["https://raw.githubusercontent.com/argoproj/argo-cd/v(?<currentValue>.*)/manifests/install.yaml"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "victorbiga/test-renovate",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
