{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Cert Manager Production",
      "matchPaths": ["apps/cert-manager/production/.+\\.js?on$"],
      "enabled": true,
      "automerge": false,
      "commitMessage": "chore(cert-manager): Cert Manager Production {{currentValue}} update to {{newValue}}"
    }
  ],
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "regexManagers": [
    {
      "fileMatch": [
        "\\.json$"
      ],
      "matchStrings": [
        "\"chartVersion\": \"(?<currentValue>.*)\""
      ],
      "depNameTemplate": "cert-manager",
      "datasourceTemplate": "git-tags",
      "extractVersionTemplate": "^cert-manager-v(?<version>.*)$"
    }
  ]
}
