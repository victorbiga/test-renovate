
{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": [
        "**/staging/*/config_dir.json",
        "**/production/*/config_dir.json"
      ],
      "matchStrings": [
        "\"chartVersion\": \"(\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "${platform}-${appName}-chart-version-${match[1]}"
    }
  ],
  "dependencyDashboard": {
    "prCreation": "auto"
  }
}
