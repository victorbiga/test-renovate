{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": [
        "apps/cert-manager/staging/config_dir.json",
        "apps/cert-manager/production/config_dir.json"
      ],
      "matchStrings": [
        "\"chartVersion\": \"(\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "${depName}-chart-version-${match[1]}",
      "currentValueTemplate": "${match[1]}",
      "depNameTemplate": "cert-manager"
    }
  ],
  "dependencyDashboard": true
}
